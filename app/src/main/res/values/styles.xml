<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="style_exception_dialog_title_text_view">
        <item name="android:padding">@dimen/exception_dialog_title_padding</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_exception_dialog_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/soft_orange</item>
        <item name="android:layout_marginBottom">@dimen/exception_dialog_positive_button_margin_bottom</item>
        <item name="android:text">@string/exception_dialog_positive_text</item>
    </style>

    <style name="style_movie_card">
        <item name="android:layout_marginStart">@dimen/movie_card_text_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/movie_card_text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/movie_card_text_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/movie_card_text_margin_vertical</item>
    </style>

    <style name="style_fragment_movies_section_title">
        <item name="android:layout_margin">@dimen/fragment_movies_section_title_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
</resources>
