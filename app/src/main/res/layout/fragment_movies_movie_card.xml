<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:layout_margin="5dp"
    android:paddingBottom="@dimen/fragment_movies_movie_card_padding_bottom">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/light_blue">

        <TextView
            android:id="@+id/fragment_movies_movie_value_text_view"
            android:layout_width="@dimen/fragment_movies_movie_points_size"
            android:layout_height="@dimen/fragment_movies_movie_points_size"
            android:background="@color/soft_orange"
            android:gravity="center"
            android:elevation="1dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/fragment_movies_movie_poster_image_view"
            app:layout_constraintTop_toTopOf="@id/fragment_movies_movie_poster_image_view" />

        <ImageView
            android:id="@+id/fragment_movies_movie_poster_image_view"
            android:layout_width="@dimen/movie_card_poster_width"
            android:layout_height="@dimen/movie_card_poster_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_movies_movie_title_text_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            android:ellipsize="end"
            android:maxLength="28"
            android:textSize="@dimen/extra_small_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/fragment_movies_movie_poster_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_movies_movie_poster_image_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
