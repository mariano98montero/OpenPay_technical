<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/movie_card_margin_horizontal_card_view"
        android:layout_marginVertical="@dimen/movie_card_margin_vertical_card_view"
        app:cardCornerRadius="@dimen/movie_card_corner_radius_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue">

            <ImageView
                android:id="@+id/profile_screen_movie_card_image_view"
                android:layout_width="@dimen/movie_card_poster_width"
                android:layout_height="@dimen/movie_card_poster_height"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_screen_movie_card_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/style_movie_card"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_screen_movie_card_image_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_screen_movie_card_overview_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/style_movie_card"
                android:text="Overview random"
                android:textSize="@dimen/extra_small_text_size"
                app:layout_constraintBottom_toTopOf="@id/movie_card_vote_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_screen_movie_card_image_view"
                app:layout_constraintTop_toBottomOf="@id/profile_screen_movie_card_title" />

            <TextView
                android:id="@+id/movie_card_vote_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/soft_orange"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_screen_movie_card_image_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
